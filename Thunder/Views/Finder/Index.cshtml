<div class="panel-header bg-primary-gradient">
	<div class="page-inner py-5">
		<div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
			<div>
				<h2 class="text-white pb-2 fw-bold">Pencarian Kampus</h2>
			</div>
		</div>
	</div>
</div>

<div class="page-inner mt--5">
	<div class="row mt--2 row" id="content">
		<div class="col-md-12">
			<div class="card">
				<div class="card-body row">
					<div class="input-group col-md-11">
						<input type="text" placeholder="Pencarian ..." id="keyword" class="form-control">
						<div class="input-group-prepend">
							<button type="submit" class="btn btn-search">
								<i class="fa fa-search search-icon"></i>
							</button>
						</div>
					</div>
					<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#filterModal">
						Filter
					</button>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="filterModal" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <h4>Filter Pencarian</h4>
                </center>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="max-height:200px; overflow-y:scroll;">
                <div class="col-md-12">
                    <div class="form-group">
						<label>Kota</label>
						<div class="select2-input">
							<select id="cities" name="cities[]" class="form-control multi" multiple="multiple" style="width:220px;">
								@foreach (City city in ViewBag.Cities)
								{
									<option value="@city.Id">@city.Name</option>								
								}	
							</select>
						</div>                    
					</div>
					<div class="form-group">
						<label>Fasilitas</label>
						<div class="select2-input">
							<select id="facilities" name="facilities[]" class="form-control multi" multiple="multiple" style="width:220px;">
								@foreach (Facility facility  in ViewBag.Facilities)
								{
									<option value="@facility.Id">@facility.Name</option>								
								}	
							</select>
						</div>                    
					</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary pull-left" onclick="Update()">
                    <div class="spinner-border spinner-border-sm"></div>
                    Simpan
                </button>
                <button type="button" data-dismiss="modal" class="btn btn-secondary">Kembali</button>
            </div>
        </div>
    </div>

</div>

<script>
	$('.multi').select2({
		theme: "bootstrap"
	});
</script>