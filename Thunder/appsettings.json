    "SaveTokens": "false",
    "GetClaimsFromUserInfoEndpoint": "true",
    "RequireHttpsMetadata": "false",
    "AuthenticationType": "keycloak_cookies",
    "ExpireTimeSpan": "8",
    "RedirectUri": "http://localhost:44362/",
